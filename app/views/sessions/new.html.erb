<div class="text-center">
  <h1 class="h3 mb-3 font-weight-normal">ログイン</h1>

<%= flash[:alert] %>

<%= form_tag session_path, method: :post do %>
  <div class="row justify-content-center">
    <div class="col-xs-3 ">

      <div class="form-group  ">
        <%= text_field_tag 'user[id_name]', nil, {class: 'form-control', id: "loginID", placeholder: 'ID'} %>
      </div>
      <div class="form-group ">
        <%= password_field_tag 'user[password]', nil, {class: 'form-control', id: "loginPassword", placeholder: 'Password'} %>
      </div>
    </div>
  </div>
  <%= submit_tag ("ログイン"), {class: 'btn btn-primary'} %>
<% end %>
<%= link_to "アカウントを作成", new_user_path %>
</div>