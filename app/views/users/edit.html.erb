<div class="form-group">
  <%= form_with model: @user, url: user_path(@user), local: true, method: 'PATCH' do |form| %>
    <%= render 'layouts/error_messages', model: @user %>
    <%= form.label "ユーザー名" %>
    <%= form.text_field :name, value: @user.name, class: 'form-control' %>

    <%= form.label "自己紹介" %>
    <%= form.text_area :bio, value: @user.bio, class: 'form-control' %>

    <%= form.label "ユーザーID（半角英数字）" %>
    <%= form.text_field :id_name, value: @user.id_name, class: 'form-control' %>

    <%= form.label "メールアドレス" %>
    <%= form.email_field :email, value: @user.email, class: 'form-control' %>

    <%= form.submit "更新する", class: 'btn btn-primary' %>
  <% end %>
</div>

<%= link_to 'パスワードを変更する', edit_user_password_path(@user) %>
